[Unit]
Description=Multi-billing core
After=syslog.target network.target mysql.service

[Service]
User={{ mbcore.system_user }}
RuntimeDirectory={{ mbcore.system_user }}
Type=forking
TimeoutSec=15s
PIDFile={{ mbcore.params.production.pid }}
ExecStart={{ php_path.stdout }} {{ billing.dirs.home }}/{{ mbcore.dirs.module }}/{{ mbcore.dirs.production }}/mbcore.php --noroot
ExecReload=/bin/kill -s SIGHUP $MAINPID
ExecStop=/bin/kill -s SIGTERM $MAINPID
KillMode=process

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target